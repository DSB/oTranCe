<?php
$cycleHelper = $this->cycle(array('row-even', 'row-odd'));
$i = 1;
?>
<table class="bdr morepadding" summary="Import results">
    <tr class="thead">
        <th>#</th>
        <th><?php echo $this->lang->L_KEY;?></th>
        <th><?php echo $this->lang->L_VALUE;?></th>
        <th><?php echo $this->lang->L_IMPORT_RESULT;?></th>
    </tr>
    <?php
    foreach ($this->results as $message) { ?>
        <tr class="<?php echo $cycleHelper->next();?>">
            <td class="right vmiddle"><?php echo $i;?>.</td>
            <td><?php echo $message['key'];?></td>
            <td><?php echo $this->importedValues[$message['key']];?></td>
            <td><?php
                $errorLangKey = $this->errorMessages->getTranslationKey($message['message']);
                echo $this->lang->$errorLangKey;
                ?></td>
            </tr><?php
            $i++;
    } ?>
</table>
